#--- Shutdown Restat---#
# Quit/Restart bspwm
super + shift + {q,r}
	prompt {"Shutdown" "shutdown now","Restart" "reboot"}
# close and kill
super + {_,shift + }q
	bspc node -{c,k}
# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd
# Shutdown
super + control + r
	prompt "Restart BSP" "bspc wm -r"
# Restart
super + control + q
	prompt "Quit BSP" "bspc quit"

# program launcher
# $TERMINAL
super + Return
	st
# Dmenu
super + @space
	dmenu_run -nb '#2E3440' -sf '#2E3440' -sb '#88C0D0' -nf '#88c0d0' -h 27
# GUI
super + {d,e}
	{brave-nightly,pcmanfm}

# CLI
super + {a,s,r}
	$TERMINAL -e {lf,newsboat,rtorrent}
# Screenshot
Print
	flameshot gui
super + x
	slock

# Vol Control
XF86AudioRaiseVolume
	amc up

XF86AudioLowerVolume
	amc down

XF86AudioMute
	amc tog

# ---- BSPWM MODES----#
# Toggle floating on and off
super + u
  bspc node focused.tiled -t floating || bspc node focused.floating -t tiled
# alternate between the tiled and monocle layout
super + o
	bspc desktop -l next
# swap the current node and the biggest node
super + i
	bspc node -s biggest
# set the window state
super + u
	bspc node -t tiled
# set the node flags
super + y
	bspc node -g sticky

#--- Windows Management --- #
# move windows node in the given direction
super + shift + {h,j,k,l}
	bspc node -s {west,south,north,east}
# focus the node in the given direction
super + {h,j,k,l}
	bspc node -f {west,south,north,east}
# focus the next/previous desktop in the current monitor
super + {N,n}
	bspc desktop -f {prev,next}.local
# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'
# Send window to desktop and swap to desktop
super + control + {0-9}
	bspc node -d {0-9} && bspc desktop -f {0-9}
# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}
# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}
# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}
# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}
# Testing
# Rotate the tree from the current nodes parent
super + control + {Right, Left}
	bspc node @parent --rotate {90,270}
# Swap nodes the tree from the current nodes parent
super + control + {Up, Down}
  bspc node @parent -C {forward, backward}
